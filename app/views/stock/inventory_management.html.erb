<div class="container">
  <h2>Inventory Management</h2>
  <%= form_tag process_inventory_stock_index_path, multipart: true, data: { turbo: false } do %>
    <div class="form-group">
      <%= label_tag :inventory, "Upload Inventory File" %>
      <%= file_field_tag :inventory, class: 'form-control' %>
    </div>
    
    <div class="form-group">
      <%= label_tag :email, "Email Address" %>
      <%= email_field_tag :email, nil, class: 'form-control' %>
    </div>
    
    <%= submit_tag "Process Inventory", class: 'btn btn-primary' %>
  <% end %>
</div>
